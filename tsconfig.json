{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "resolveJsonModule": true
  },
  "exclude": ["*/test/*", "./tailwind.config.js"],
}
