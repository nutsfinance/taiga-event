<div
  class="flex flex-col justify-center items-center w-full h-screen lg:px-0 bg-primary-500"
>
  <div
    class="flex flex-col justify-center items-center gap-3 lg:gap-5 bg-white rounded-md shadow-md w-80 lg:w-2/3 lg:max-w-3xl py-4 px-4 lg:py-8 lg:px-16"
  >
    <div
      class="text-2xl lg:text-4xl text-taiga-gray-900 font-semibold"
    >{{username}}</div>
    <div class="w-full border border-taiga-gray-200"></div>
    <div class="flex flex-col justify-evenly gap-2 lg:gap-4 w-full">
    {{#if inOldUsers}}
      <div class="flex flex-row justify-between">
        <div>Participation inaugural Event Airdrop Receivers</div><div>Complete</div>
      </div>
    {{/if}}
      {{#if inKaruraSnapshot}}
        <div class="flex flex-row justify-between">
          <div>Karura User</div><div>Complete</div>
        </div>
      {{/if}}
        
      {{#if crowdcastParticipant}}
        <div class="flex flex-row justify-between">
          <div>Karura Crowdloan Participant</div><div>Complete</div>
        </div>
      {{/if}}
      <div class="flex flex-row justify-between">
        <div>Mission 1</div>
        <div>
          {{#if mission1Complete}}
            Complete
          {{else}}
            Incomplete
          {{/if}}
        </div>
      </div>
      <div class="flex flex-row justify-between">
        <div>Mission 2</div>
        <div>
          {{#if mission2Complete}}
            Complete
          {{else}}
            Incomplete
          {{/if}}
        </div>
      </div>
      <div class="flex flex-row justify-between">
        <div class="text-primary-500 font-semibold">Role</div><div
          class="text-primary-500 font-semibold"
        >{{role}}</div>
      </div>
    </div>
    <div class="bg-primary-400 px-3 py-2 rounded-md shadow text-white">Form
      Closed</div>
  </div>
</div>